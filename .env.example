# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://yoursite.com/api/auth/oauth-callback.php?provider=google

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_REDIRECT_URI=https://yoursite.com/api/auth/oauth-callback.php?provider=facebook

# Instagram OAuth Configuration
INSTAGRAM_CLIENT_ID=your_instagram_client_id_here
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret_here
INSTAGRAM_REDIRECT_URI=https://yoursite.com/api/auth/oauth-callback.php?provider=instagram

# Security Keys (GENERATE RANDOM KEYS FOR PRODUCTION)
# You can generate these using: openssl rand -hex 32
ENCRYPTION_KEY=generate_a_random_64_character_hexadecimal_key_here_replace_this
CSRF_SECRET=generate_another_random_64_character_hexadecimal_key_here_also

# API Keys
# Import API Key (for CSV product import endpoint)
IMPORT_API_KEY=your_import_api_key_here

# Database Configuration (PostgreSQL)
# Option 1: Use DATABASE_URL (Render.com format)
DATABASE_URL=postgresql://username:password@hostname:5432/portuga_db

# Option 2: Use individual variables (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portuga_db
DB_USER=postgres
DB_PASS=your_database_password

# Email Configuration (for verification emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM=noreply@yoursite.com
SMTP_FROM_NAME=Portuga Restaurante

# Application Settings
APP_URL=https://yoursite.com
APP_ENV=production
DEBUG_MODE=false

# Google Maps API (for distance calculation)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Alternative: Mapbox API (optional, if not using Google Maps)
MAPBOX_API_KEY=your_mapbox_api_key_here
